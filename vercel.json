{
    "version": 2,
    "builds": [
      {
        "src": "api/*.php",
        "use": "@vercel/php"
      },
      {
        "src": "public/**/*",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api/$1"
      },
      {
        "src": "/",
        "dest": "/api/connexion.php"
      },
      {
        "src": "/public/(.*)",
        "dest": "/public/$1"
      }
    ]
  }
  